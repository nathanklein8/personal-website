{
	"name": "personal-website",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "source .env && API_URL=${API_URL} vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:start": "docker compose up -d db",
		"db:diff": "atlas migrate diff --dir \"file://backend/migrations\" --to \"file://backend/schema.hcl\" --dev-url \"docker://postgres/18/dev\"",
		"db:apply": "source .env && DATABASE_URL=${DATABASE_URL} atlas migrate apply --dir \"file://backend/migrations\" --url ${DATABASE_URL}"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.18",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^24",
		"@types/pg": "^8.15.6",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"mdsvex": "^0.12.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.13",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"mode-watcher": "^1.1.0",
		"svelte-device-info": "^1.0.6",
		"svelte-typewrite": "^3.0.0",
		"tailwindcss-animate": "^1.0.7"
	}
}
